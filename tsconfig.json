{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@themes/*": [
        "./src/global/themes/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],      
      "@contexts/*": [
        "./src/contexts/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@configs/*": [
        "./src/configs/*"
      ],
      "@screens/*": [
        "./src/screens/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@slices/*": [
        "./src/slices/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@api/*": [
        "./src/api/*"
      ]
    }
  }
}